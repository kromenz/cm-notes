<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Notes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/purple_700</item>
    <item name="colorPrimaryVariant">@color/purple_700</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/pink</item>
    <item name="colorSecondaryVariant">@color/pink</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <style name="DatePickerDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <!-- Altere a cor de fundo do DatePickerDialog conforme desejado -->
        <item name="android:background">@color/purple_700</item>
        <!-- Altere a cor do texto do DatePickerDialog conforme desejado -->
        <item name="android:textColorPrimary">@color/white</item>
    </style>

</resources>